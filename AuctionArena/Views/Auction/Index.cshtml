@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-3">🏆 Live Auction App</h1>
    <p class="lead">Create or join player auctions!</p>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>🎯 Host Auction</h3>
                    <p>Create a new lobby and invite teams</p>
                    <a href="/Auction/CreateLobby" class="btn btn-primary">
                        Create Lobby
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>👥 Join Auction</h3>
                    <p>Enter a lobby code to join</p>
                    <a href="/Auction/JoinLobby" class="btn btn-primary">
                        Join Lobby
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>